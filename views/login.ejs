<div class="w-[100%] h-[100%]  mx-auto bg-white">

    <form action="/auth" method="POST" class=" w-[100%] flex flex-col justify-center items-center mt-[10%]">
        <div>
            <label htmlFor="name">Enter Name :</label>
            <input id="name" name="name" value="name" type="text" class="border-2" />
        </div>
        <br />

        <div>
            <label>Enter Email :</label>
            <input id="email" name="email" type="email" value="email" class="border-2" />
            <div>
                <br />
            </div>

            <div class="flex">

                <p>Select Gender : </p>
                <div class="flex ml-2 gap-2">
                    <label htmlFor="male"> MALE</label>
                    <input type="radio" id="male" name="gender" value="MALE" />
                    <br />
                    <label htmlFor="female">FEMALE</label>
                    <input type="radio" id="female" name="gender" value="FEMALE" />
                    <br />
                    <label htmlFor="other">OTHER</label>
                    <input type="radio" id="other" name="gender" value="OTHER" />
                </div>

            </div>
            <button class="mt-8 border-2 cursor-pointer bg-blue-300 p-2 rounded-lg ml-32 " type="submit">Submit</button>
    </form>




</div>